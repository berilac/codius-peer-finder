{
  "name": "codius-peer-finder",
  "version": "0.0.2",
  "description": "Peer Discovery for the Codius Network",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rm -rf dist",
    "build": "tsc --module commonjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "yarn lint && yarn test -- --coverage --no-cache",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 85,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverage": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codius/codius-peer-finder.git"
  },
  "keywords": [
    "codius",
    "peer",
    "finder",
    "interledger",
    "xrp",
    "host"
  ],
  "author": "Landon Spear <phyujin@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/codius/codius-peer-finder/issues"
  },
  "homepage": "https://github.com/codius/codius-peer-finder#readme",
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/jest": "^23.1.0",
    "@types/lodash.samplesize": "^4.2.3",
    "@types/moxios": "^0.4.8",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.4",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "moxios": "^0.4.0",
    "prettier": "^1.13.5",
    "semantic-release": "^15.5.4",
    "source-map-support": "^0.5.6",
    "timekeeper": "^2.1.2",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.9.2",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "debug": "^3.1.0",
    "lodash.samplesize": "^4.2.0"
  }
}
